<p id="notice"><%= notice %></p>

<h1>Listing Goals</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <h3><%= goal.name %></h3>
      
        <%= link_to 'Show', goal %>
        <%= link_to 'Edit', edit_goal_path(goal) %>
        <%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal', new_goal_path %>
